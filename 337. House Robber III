class Solution {
vector<int> getMoney(TreeNode* node) {  
        vector<int> res(2,0);
        if(node==NULL)return res;
        vector<int> lres=getMoney(node->left);
        vector<int> rres=getMoney(node->right);
        res[0]=lres[1]+rres[1]+node->val;
        res[1]=max(lres[0],lres[1])+max(rres[0],rres[1]);
        return res;
    }  
public:  
    int rob(TreeNode* root) {  
        vector<int> ret = getMoney(root);  
        return max(ret[0], ret[1]);  
    }  
};
