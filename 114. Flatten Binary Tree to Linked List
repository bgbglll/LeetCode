class Solution {
public:
    void dfs(TreeNode* &res,TreeNode* root){
        if(root==NULL)return;
        res->right=root;
        res->left=NULL;
        res=res->right;
        TreeNode *left = root->left;
        TreeNode *right = root->right;
        dfs(res,left);
        dfs(res,right);
    }
    void flatten(TreeNode* root) {
        TreeNode* res=new TreeNode(0);
        dfs(res,root);
        root=res->right;
    }
};
