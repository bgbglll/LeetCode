class Solution {
public:
    void dfs(TreeNode* root, int sum,int cur,vector<int> temp,vector<vector<int>> &res){
        if(root==NULL)return;
        temp.push_back(root->val);
        cur+=root->val;
        if(cur==sum&&root->left==NULL&&root->right==NULL){
            res.push_back(temp);
        }
        dfs(root->left,sum,cur,temp,res);
        dfs(root->right,sum,cur,temp,res);
        cur-=root->val;
        temp.pop_back();
    }
    vector<vector<int>> pathSum(TreeNode* root, int sum) {
        vector<vector<int>> res;
        vector<int> temp;
        dfs(root,sum,0,temp,res);
        return res;
    }
};
