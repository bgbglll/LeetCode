/**
 * Definition for binary tree with next pointer.
 * struct TreeLinkNode {
 *  int val;
 *  TreeLinkNode *left, *right, *next;
 *  TreeLinkNode(int x) : val(x), left(NULL), right(NULL), next(NULL) {}
 * };
 */
class Solution {
public:
    void connect(TreeLinkNode *root) {
        if(root==NULL)return;
        queue<TreeLinkNode*> myq;
        myq.push(root);
        int i=0;
        int j=1;
        TreeLinkNode* prev=NULL;
        while(!myq.empty()){
            TreeLinkNode *t=myq.front();
            myq.pop();
            j--;
            if(prev!=NULL){
                prev->next=t;
            }
            prev=t;
            if(t->left){
                myq.push(t->left);
                i++;
            }
            if(t->right){
                myq.push(t->right);
                i++;
            }
            if(j==0){
                j=i;
                prev=NULL;
                i=0;
            }
        }
    }
};
