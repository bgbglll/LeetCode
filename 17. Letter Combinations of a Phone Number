class Solution {
public:
    string a[8][4] = { {"a", "b", "c", "#"}, {"d", "e", "f", "#"}, {"g", "h", "i", "#"}, {"j", "k", "l", "#"},{"m", "n", "o", "#"}, {"p", "q", "r", "s"}, {"t", "u", "v", "#"}, {"w", "x" ,"y","z"}};

void combination(string s, vector<string> &res, int k, string ss){
	
	if (k == s.size()){
		res.push_back(ss);
		return ;
	}
	for (int i = 0; i < 4; i++){
		stringstream temp;
		int t;
		temp << s[k];
		temp >> t;
		if(a[t-2][i]!="#")
		    combination(s, res, k + 1, ss + a[t-2][i]);
	}
}
vector<string> letterCombinations(string digits) {
	vector<string> res;
	if(digits.size()==0){
	    return res;
	}
	combination(digits, res, 0, "");
	return res;
}
};
